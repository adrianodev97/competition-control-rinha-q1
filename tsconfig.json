{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "target": "ES2023",
    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*.ts",
        "*.js"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}